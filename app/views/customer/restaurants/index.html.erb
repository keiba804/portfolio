<%= search_form_for @search, url: customer_restaurants_path do |f| %>

  <%= f.condition_fields do |c| %>

    <%= c.attribute_fields do |a| %>
      <%= a.attribute_select %>
    <% end %>

    <%= c.predicate_select %>

    <%= c.value_fields do |v| %>
      <%= v.search_field :value %>
    <% end %>

  <% end %>

  <%= f.submit %>
<% end %>



<div class="col-xs-9">
	<h2>レストラン一覧</h2>
	<!--users一覧 -->
	<table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @restaurants.each do |restaurant| %>
			<tr>
				<td><%= attachment_image_tag(restaurant, :restaurant_top_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
				<td><%= link_to restaurant.restaurant_name, customer_restaurant_path(restaurant) %></td>
				<td>
					<% if current_user.following?(restaurant) %>
						<%= link_to 'フォロー外す', customer_unfollow_path(restaurant.id), method: :POST %>
					<% else %>
						<%= link_to 'フォローする', customer_follow_path(restaurant.id), method: :POST %>
					<% end %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>