<div class="col-xs-12">
  <div class="row">
    <div class="col-xs-3 side-ber">
      <%= render 'customer/users/side_ber' %>
    </div>
	<div class="col-xs-9">
		
		<%= search_form_for @search, url: customer_restaurants_path do |f| %>
			<%= f.label :introduce_title_or_introduce_body_or_restaurant_name_or_restaurant_adress_or_access_cont_all, "キーワード検索" %>
			<%= f.text_field :introduce_title_or_introduce_body_or_restaurant_name_or_restaurant_adress_or_access_cont_all, class: "form-control", placeholder: "" %>
			<%= f.submit %>
		<% end %>

		<h2>レストラン一覧</h2>
		<!--users一覧 -->
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @restaurants.each do |restaurant| %>
					<tr>
						<td><%= attachment_image_tag(restaurant, :restaurant_top_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50') %></td>
						<td><%= link_to restaurant.restaurant_name, customer_restaurant_path(restaurant) %></td>
						<td>
							<% if current_user.following?(restaurant) %>
								<%= link_to 'フォロー外す', customer_unfollow_path(restaurant.id), method: :POST %>
							<% else %>
								<%= link_to 'フォローする', customer_follow_path(restaurant.id), method: :POST %>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
  </div>
</div>


