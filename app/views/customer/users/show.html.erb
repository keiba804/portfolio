<div class="col-xs-12">
  <div class="row">
    <div class="col-xs-3 side-ber">
      <%= render 'customer/users/side_ber' %>
    </div>
    <div class="col-xs-9">
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <th>氏名（漢字）</th>
            <td>
              <%= current_user.name_kanji %>
            </td>
          </tr>
          <tr>
            <th>氏名（カナ）</th>
            <td>
              <%= current_user.name_kana %>
            </td>
          </tr>
          <tr>
            <th>ニックネーム</th>
            <td>
              <%= current_user.nickname %>
            </td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td>
              <%= current_user.user_phone_number %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= current_user.email %>
            </td>
          </tr>
        </tbody>
      </table>

      <p><%= link_to 'TOPに戻る', customer_user_top_path %>/<%= link_to '編集する', edit_user_registration_path %></p>
    </div>
  </div>
</div>

      