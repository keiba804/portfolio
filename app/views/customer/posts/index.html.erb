<h2>フォローしている店舗の新着情報</h2>
<% if @restaurants.present? %>
	<table class = "table">
		<thead>
			<tr>
				<th>店名</th>
				<th>件名</th>
			</tr>
		</thead>
		<tbody>
		<% @posts.each do |post| %>
			<tr>
				<th>
					<%= link_to customer_restaurant_path(post.restaurant) do %>
						<%= post.restaurant.restaurant_name %>
					<% end %>
				</th>
				<th>
					<%= link_to customer_post_path(post) do %>
						<%= post.post_title %>
					<% end %>
				</th>
			</tr>
		<% end %>
		</tbody>
	</table>
<% end %>