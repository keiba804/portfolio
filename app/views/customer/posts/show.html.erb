<div class="col-xs-12">
  <div class="row">
    <div class="col-xs-3 side-ber">
    	<%= render 'customer/users/side_ber' %>
    </div>
    <div class="col-xs-9">
    	<h2><%= @post.restaurant.restaurant_name %>からのお知らせ</h2>
    	<h3><%= @post.post_title %></h3>
    	<p><%= @post.updated_at.strftime('%Y/%m/%d') %></p>

		<%= simple_format(@post.post_body) %>
