<h2>レストラン情報　編集画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :"レストラントップ画像" %>
    <div class="restaurant-top-image">
        <%= attachment_image_tag resource, :restaurant_top_image, :fill, 120, 120, fallback: "no_image.jpg", size:'120x120'%>
    </div>
    <label class="control-label sr-only">ProfileImage</label>
    <%= f.attachment_field :restaurant_top_image, placeholder: "レストラントップ画像" %>
  </div>


  <div class="form-group">
    <%= f.label :"管理者氏名（漢字）" %><br />
    <%= f.text_field :admin_name_kanji, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :"管理者氏名（かな）" %><br />
    <%= f.text_field :admin_name_kana, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :店舗名 %><br />
    <%= f.text_field :restaurant_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :店舗電話番号 %><br />
    <%= f.text_field :restaurant_phone_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :レストラン住所 %><br />
    <%= f.text_area :restaurant_adress, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :店舗ジャンル %><br />
    <%= f.text_field :genre, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :最寄駅 %><br />
    <%= f.text_area :access, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :"営業時間・定休日" %><br />
    <%= f.text_area :regular_holiday, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :"お通し・チャージ・サービス料等" %><br />
    <%= f.text_area :charge, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :対応支払い方法 %><br />
    <%= f.text_area :payment, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :店舗紹介タイトル %><br />
    <%= f.text_area :introduce_title, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :店舗紹介本文 %><br />
    <%= f.text_area :introduce_body, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "変更する", class: "btn btn-md btn-primary form-control" %>
  </div>
<% end %>

