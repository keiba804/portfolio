<h1>インフォメーション　変更</h1>

<div class="col-xs-12">
  <div class="row">
    <div class="col-xs-3 side-ber">
    	<%= render 'admin/restaurants/admin_sideber' %>
    </div>
    <div class="col-xs-9">
		<h1>新着インフォメーション　投稿</h1>
		<%= form_for @post, url: admin_post_path(@post), method: :put, local: true do |form| %>
		  <% if @post.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

		      <ul>
		      <% post.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>


		  <div class="field">
		    <%= form.label :post_title, '件名' %>
		    <%= form.text_field :post_title, class: "form-control" %>
		  </div>

		  <div class="field">
		    <%= form.label :post_body, '本文' %>
		    <%= form.text_area :post_body, class: "form-control" %>
		  </div>



		  <div class="actions">
		    <%= form.submit "投稿", class: "btn btn-md btn-primary form-control" %>
		  </div>
		<% end %>
		<%= link_to 'インフォメーション一覧へ', admin_post_path(@post) %> |
		<%= link_to '戻る', :back %>
    </div>
  </div>
</div>


