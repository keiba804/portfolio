					<th>カテゴリー</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>
			<% @menu_categories.each do |menu_category| %>
				<%= form_for menu_category, url: admin_menu_category_path(menu_category), method: :patch do |f| %>
