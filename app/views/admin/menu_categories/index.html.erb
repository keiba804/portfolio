						<td><%= f.text_field :menu_category_name, class: "form-control" %></td>
						<td >
							<%= f.label :有効　%>
							<%= f.radio_button :active_status , :有効 %>
							<%= f.label :無効　%>
							<%= f.radio_button :active_status , :無効 %>
