			</div>
			<div class=""></div>
			<div class="form-group">
				<div class="form-inline">
				<%= f.label :有効　%>
				<%= f.radio_button :active_status , :有効 %>
				<%= f.label :無効　%>
				<%= f.radio_button :active_status , :無効 %>
			</div>
	        </div>
