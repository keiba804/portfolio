
<h1><%= @restaurant.restaurant_name %> メニュー</h1>
<h2>カテゴリー一覧</h2>
<ul>
  <% @menu_categories.each do |menu_category| %>
    <li><a href="#{menu_category.id}"><%= menu_category.menu_category_name %></a></li>
  <% end %>
<ul>

<% @menu_categories.each do |menu_category| %>
<h3><%= menu_category.menu_category_name %></h3>
  <table class="table teble-sortable" id="{menu_category.id}" >
    <thead>
      <tr>
        <th>メニュー名</th>
        <th>価格</th>
        <th>商品説明</th>
        <th>テイクアウト</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% menu_category.menus.each do |menu| %>
        <tr item>
          <td>
            <%= menu.menu_name %>
          </td>
          <td>
            <%= menu.price %>
          </td>
          <td>
            <%= menu.explanation %>
          </td>
          <td>
            <%= menu.takeout %>
          </td>
          <td>
            <%= menu.sales_status %>
          </td>
          <td>
            <%= menu.favorites.count %> いいね
          </td>
          <td><%= link_to '編集', edit_admin_menu_path(menu) %></td>
          <td><%= link_to '削除', admin_menu_path(menu), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>

<%= link_to 'New Menu', new_admin_menu_path %>
