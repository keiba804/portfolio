<%= form_for @seat_availability, url:admin_seat_availabilities_path do |f| %>
	<%= f.hidden_field :restaurant_id, value: current_restaurant.id %>
	<div class="field">
		<%= f.label :非公表 %>
		<%= f.radio_button :seat_availability , :非公表 %>
		<%= f.label :準備中 %>
		<%= f.radio_button :seat_availability , :準備中 %>
		<%= f.label :空席余裕あり %>
		<%= f.radio_button :seat_availability , :空席余裕あり %>
		<%= f.label :空席僅か %>
		<%= f.radio_button :seat_availability , :空席僅か %>
		<%= f.label :満席 %>
		<%= f.radio_button :seat_availability , :満席 %>
    </div>
    <div class="action">
    	<%= f.submit "更新", class: "btn btn-md btn-primary" %>
    </div>
<% end %>