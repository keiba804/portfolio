<h3>画像投稿フォーム</h3>

<%= form_for(@restaurant_image, url: admin_restaurant_images_path, method: :post) do |f| %>
	<div class="form-group has-icon">
        <div class="product-new-image">
          <%= attachment_image_tag @product, :image, :fill, 60, 60, fallback: "no_image.jpg"%>
        </div>
        <label class="action">
          <p>画像選択</p>
          <%= f.attachment_field :restaurant_image, style: "display:none;", placeholder: "店舗画像" %><br>
        </label>
      </div>
	<%= f.text_area :restaurant_image_title, class:"form-control", placeholder:"タイトル" %><br>
	<%= f.text_area :restaurant_image_body, class:"form-control", rows:"3", placeholder:"写真説明" %><br>
	<%= f.submit "投稿" %><br>
<% end %>